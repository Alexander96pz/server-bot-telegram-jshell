FROM python:3.8.0
COPY . usr/src/app
WORKDIR /usr/src/app

RUN pip install --upgrade pip
RUN pip install -r requirements.txt

RUN apt-get install docker.io
#RUN apk install docker 
#RUN apk update && apk add --no-cache docker-cli

CMD python main.py
